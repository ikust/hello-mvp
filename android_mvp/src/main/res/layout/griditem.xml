<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/ivThumbnail"
              android:gravity="center"
              android:background="@drawable/background_griditem"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="@dimen/listitem_image_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        tools:src="@drawable/pokemon_1"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvName"
        tools:text="Pikachu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?textAppearanceListItem"/>

    <TextView
        android:id="@+id/tvNumber"
        tools:text="#123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?textAppearanceListItemSmall"/>

</LinearLayout>